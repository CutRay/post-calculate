{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "quotes": ["error", "single"],
    "semi": ["error", "never", {
      "beforeStatementContinuationChars": "never"
    }],
    "no-inner-declarations": "off"
  }
}